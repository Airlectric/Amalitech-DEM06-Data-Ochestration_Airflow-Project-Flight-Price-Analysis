# Copy this file to .env and fill in the values

# PostgreSQL (Airflow metadata DB)
POSTGRES_USER=airflow
POSTGRES_PASSWORD=your_airflow_password
POSTGRES_DB=airflow

# MySQL Staging
MYSQL_ROOT_PASSWORD=your_mysql_root_password
MYSQL_DATABASE=staging_db
MYSQL_USER=staging_user
MYSQL_PASSWORD=your_staging_password

# Analytics PostgreSQL
ANALYTICS_POSTGRES_USER=analytics_user
ANALYTICS_POSTGRES_PASSWORD=your_analytics_password
ANALYTICS_POSTGRES_DB=analytics_db


# Airflow connections – format: AIRFLOW_CONN_<CONN_ID_UPPERCASE>=<URI>
# MySQL Staging
AIRFLOW_CONN_MYSQL_STAGING=mysql://staging_user:your_staging_password@mysql:3306/staging_db?charset=utf8mb4

# PostgreSQL Analytics
AIRFLOW_CONN_POSTGRES_ANALYTICS=postgres://analytics_user:your_analytics_password@analytics-postgres:5432/analytics_db

# Airflow Fernet key – IMPORTANT: generate once and never change!
# Run this once in Python to get a secure value:
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=your_generated_fernet_key_here

# Ports (change if conflicts on your machine)
AIRFLOW_WEB_PORT=8080
MYSQL_LOCAL_PORT=3307
METADATA_POSTGRES_LOCAL_PORT=5433
ANALYTICS_POSTGRES_LOCAL_PORT=5434
REDIS_LOCAL_PORT=6379
ADMINER_LOCAL_PORT=8081

# User/Group for non-root execution (GID=0 is recommended by Airflow)
AIRFLOW_UID=50000
AIRFLOW_GID=0

# Admin user creation (works only with FabAuthManager)
_AIRFLOW_WWW_USER_CREATE=true
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=your_secure_admin_password
_AIRFLOW_WWW_USER_ROLE=Admin
_AIRFLOW_WWW_USER_EMAIL=admin@example.com
_AIRFLOW_WWW_USER_FIRSTNAME=Admin
_AIRFLOW_WWW_USER_LASTNAME=Admin